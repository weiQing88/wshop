/* pages/cat/cat.wxss */
.empty{
   width: 100%;
   height: 100vh;
   background-color: #ddd;
}

.empty image{
     display: block;
     width: 55px;
     height: 55px;
     margin: 30% auto 0;
}

.empty .text{
     text-align: center;
     margin: 50rpx 0 100rpx;
}

.empty .btn{
    width: 40%;
    height: 70rpx;
    line-height: 70rpx;
    margin: 0 auto;
    text-align: center;
    background-color: #e65f03;
    color: #fff;
}


.cat-main{
  width: 100%;
  height: 100vh;
  background-color: #ddd;
}


.cat-header{
   display: flex;
   flex-direction: row;
   justify-content: space-between;
   width: 98%;
   padding: 20rpx 1%;
   margin: 0 auto;
   background-color: #fff;
   border-bottom: 1px solid #ddd;
}

.cat-header image{
    width: 40rpx;
    height: 40rpx;
}

.cat-icon{ 
   position: relative;
    width: 64rpx;
    height: 64rpx;
    background-color: #e65f03;
    border-radius: 50%;
}

.cat-icon image{
   position: relative;
   top: 15rpx;
   left: 12rpx;
    width: 40rpx;
    height: 40rpx;
}

.cat-icon .tip{
    position: absolute;
    top: 0;
    right: -12rpx;
    font-size: 20rpx;
    background-color: red;
    border-radius: 50%;
    color: #fff;
    padding: 0 7rpx;
}

.cat-clear{
   display: flex;
   flex-direction: row;
   height: 60rpx;
   line-height: 60rpx;
}

.cat-clear image{
   position: relative;
   top: 10rpx;
   left: 0;
}
.cat-clear view{ 
      font-size: 25rpx;
  }

.cat-list{
  width: 100%;
  background-color: #fff;
}

.cat-item{
   width: 98%;
   padding: 15rpx 0;
   margin: 0 auto;
   border-bottom: 1px solid #ddd;
}


.cat-item-info{
     display: flex;
     flex-direction: row;
     justify-content: space-between;
     width: 100%;

}

.cat-item-name{
   color: #000;
    max-width: 50%;
}


.cat-item-block{}

.cat-item-price{
   display: inline-block;
   margin-right: 10rpx;
   color: red;
}


.cat-item-tags{
    display: flex;
    flex-direction: row;
    font-size: 10px;
}
.cat-item-tag{
   padding: 8rpx 16rpx 8rpx 0;
}



